{
    "version": 2,
    "builds": [
        {
            "src": "api/src/index.js",
            "use": "@vercel/node"
        },
        {
            "src": "web/package.json",
            "use": "@vercel/static-build",
            "config": {
                "distDir": "dist"
            }
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/api/src/index.js"
        },
        {
            "src": "/(.*)",
            "dest": "/web/$1",
            "continue": true
        },
        {
            "handle": "filesystem"
        },
        {
            "src": "/(.*)",
            "dest": "/web/index.html"
        }
    ]
}